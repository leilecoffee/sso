<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  

<mapper namespace="cn.mcsj.sso.dao.ProductTypePermissionDao">  
     
    <resultMap id="productTypePermissionResultMap" type="ProductTypePermission">
		<result property="id" column="id" />
		<result property="productTypeId" column="product_type_id" />
		<result property="permColumn" column="perm_column" />
		<result property="createTime" column="create_time" />
	</resultMap>
	
	<sql id="productTypePermissionColumns"> 
			id,
			product_type_id,
			perm_column,
			create_time
	</sql>
	
	<sql id="query_ProductTypePermission_where">
		<where>
			1 = 1
			<if test="id != null and id !=''">and id = #{id}</if>
			<if test="productTypeId != null and productTypeId !=''">and product_type_id = #{productTypeId}</if>
			<if test="permColumn != null and permColumn !=''">and perm_column = #{permColumn}</if>
			<if test="createTime != null and createTime !=''">and create_time = #{createTime}</if>
		</where>
	</sql>
	
	<select id="getOne" parameterType="long" resultMap="productTypePermissionResultMap">
		select
		<include refid="productTypePermissionColumns" />
		from t_product_type_permission
		where id = #{id}
	</select>
	
	<select id="list" parameterType="java.util.Map" resultMap="productTypePermissionResultMap">
		select
		<include refid="productTypePermissionColumns" />
		from t_product_type_permission
		<include refid="query_ProductTypePermission_where" />
		<if test="_start != null and _pageSize != null">limit #{_start},#{_pageSize}</if>
	</select>
	
    <select id="total" parameterType="java.util.Map" resultType="int">
		select count(1) from t_product_type_permission
		<include refid="query_ProductTypePermission_where" />
	</select>
    
    <insert id="insert" parameterType="ProductTypePermission" useGeneratedKeys="true" keyProperty="id">  
        insert into t_product_type_permission(
        <include refid="productTypePermissionColumns" />
        )  
		values(
        #{id},
        #{productTypeId},
        #{permColumn},
        #{createTime}
		)
    </insert>  
      
    <update id="update" parameterType="ProductTypePermission">
		update t_product_type_permission
		<set>
			<if test="productTypeId != null">
				product_type_id = #{productTypeId},
			</if>
			<if test="permColumn != null">
				perm_column = #{permColumn},
			</if>
			<if test="createTime != null">
				create_time = #{createTime},
			</if>
		</set>
		where id = #{id}
	</update>

	<delete id="delete" parameterType="long">
		delete from t_product_type_permission where
		id = #{id}
	</delete>
      
</mapper>  
